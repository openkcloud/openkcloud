# KCloud Monitor - Environment Template
# Copy to .env and adjust values for your deployment.

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="KCloud Monitor"
APP_VERSION="0.1.0"
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# Multi-worker configuration
# WARNING: Multi-worker mode (>1) requires Redis for shared cache.
# Current in-memory cache does NOT sync across workers.
# Recommended values:
#   - Development: UVICORN_WORKERS=1
#   - Production with Redis: UVICORN_WORKERS=4 (or CPU count)
#   - Production without Redis: UVICORN_WORKERS=1 (single worker only)
UVICORN_WORKERS=1

LOG_LEVEL="INFO"

# =============================================================================
# AUTHENTICATION (Basic Auth)
# =============================================================================
API_AUTH_USERNAME="admin"
API_AUTH_PASSWORD="changeme"

# =============================================================================
# PROMETHEUS CONNECTION (External)
# =============================================================================
PROMETHEUS_URL="https://prometheus.example.com"
PROMETHEUS_TIMEOUT=30
# Uncomment if the remote Prometheus requires auth
# PROMETHEUS_USERNAME=""
# PROMETHEUS_PASSWORD=""
# PROMETHEUS_CA_BUNDLE="/etc/ssl/certs/custom-ca.pem"

# =============================================================================
# CACHING (In-Memory)
# =============================================================================
CACHE_TTL_GPU_CURRENT=30
CACHE_TTL_GPU_TIMESERIES=300
CACHE_TTL_POWER_SUMMARY=300
CACHE_MAX_ENTRIES=1000

# =============================================================================
# EXPORT / PERFORMANCE
# =============================================================================
EXPORT_MAX_ROWS=100000
EXPORT_TIMEOUT=120
HTTP_CLIENT_TIMEOUT=30

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
DEV_RELOAD=true
